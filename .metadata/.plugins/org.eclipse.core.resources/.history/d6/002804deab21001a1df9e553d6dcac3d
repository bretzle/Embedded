#include "timing.h"
#include <inttypes.h>
#include <stdio.h>
#include <string.h>


void lcd_init(void) {
	init_GPIOx_clock('B');
	init_PB0_to_PB2_mode();

	init_GPIOx_clock('C');
	init_PC8_to_PC11_mode();

	lcd_set_up();
}

static void init_GPIOx_clock(char port) {
	/* enable the clock */
	volatile uint32_t* rcc_ahb1enr;
	rcc_ahb1enr = (uint32_t*) RCC_AHB1ENR;
	if (port == 'B') {
		*rcc_ahb1enr |= GPIOBEN;
	} else if (port == 'C') {
		*rcc_ahb1enr |= GPIOCEN;
	}
}

