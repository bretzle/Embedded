
#include "timing.h";

static void write_instruction(int inst);
static void write_data(int data);

#define RCC_AHB1ENR (volatile int *) 0x40023830
#define GPIOA_MODER (volatile int *) 0x40020000
#define GPIOC_MODER (volatile int *) 0x40020800
#define GPIOAEN 0x1
#define GPIOCEN 0x4

void lcd_init(void) {
	// enable gpio bus
	*RCC_AHB1ENR |= GPIOAEN;
	*RCC_AHB1ENR |= GPIOCEN;

	// set pins to outputs
	*GPIOA_MODER |= 0x555500;
	*GPIOC_MODER |= 0x150000;

	// wait
	delay_us(40);

	// write function (0x38)
	write_instruction(0x38);

	// wait
	delay_us(37);

	// write function (0x38)
	write_instruction(0x38);

	// wait
	delay_us(37);

	// turn display on
	write_instruction(0x0F);

	// wait
	delay_us(37);

	// clear display
	lcd_clear();

	// write function (0x06)
	write_instruction(0x06);

	// wait
	delay_us(37);
}

void write_instruction(int inst) {

}

void write_data(int data) {

}

void lcd_clear(void) {
	write_instruction(0x01);
	delay_us(1520);
}

void lcd_home(void) {

}

void lcd_set_position(int row, int col) {

}

void lcd_print_string(char *string[]) {

}

void lcd_print_num(int number) {

}
