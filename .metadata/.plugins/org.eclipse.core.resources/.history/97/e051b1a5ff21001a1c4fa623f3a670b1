  * @author  Auto-generated by STM32CubeIDE
  * @version V1.0
  * @brief   Default main function.
  ******************************************************************************
*/


#include "lcd.h"
#include "timing.h"

int main(void){
	lcd_init();
	/* Show welcome message */
	lcd_print_string("Start");
	lcd_set_position(1, 3);
	lcd_print_string("Counter!");
	delay_ms(1000);
	lcd_clear();
	lcd_home();
	int time = 10;
	/* Counts down */
	for (int i = 0; i < 10; i++) {
		lcd_print_num(time);
		delay_ms(1000);
		lcd_clear();
		lcd_home();
		time--;
	}
	/* Show end message */
	lcd_print_string("Finished!");
	while(1); // infinite loop
	return 0;
}

