#include "timing.h"
#include <inttypes.h>
#include <stdio.h>
#include <string.h>

void enable_GPIO(char);

void lcd_init(void) {
	enable_GPIO('B');
	init_PB0_to_PB2_mode();

	enable_GPIO('C');
	init_PC8_to_PC11_mode();

	lcd_set_up();
}

void enable_GPIO(char port) {
	volatile uint32_t* rcc_ahb1enr = (uint32_t*) 0x40023830;

	switch (port) {
	case 'A':
		*rcc_ahb1enr |= (1 << 0);
		break;
	case 'B':
		*rcc_ahb1enr |= (1 << 1);
		break;
	case 'C':
		*rcc_ahb1enr |= (1 << 2);
		break;
	case 'D':
		*rcc_ahb1enr |= (1 << 3);
		break;
	case 'E':
		*rcc_ahb1enr |= (1 << 4);
		break;
	case 'F':
		*rcc_ahb1enr |= (1 << 5);
		break;
	case 'G':
		*rcc_ahb1enr |= (1 << 6);
		break;
	case 'H':
		*rcc_ahb1enr |= (1 << 7);
		break;
	}
}

